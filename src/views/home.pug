extends base
include ./mixins/new
include ./mixins/popular
include ./mixins/recommend

block content
  section
    h1 🚀 최신 업로드 영상
    if recentUploadVideos.length > 0
      ul.new
        each video in recentUploadVideos
          +new(video)
      .show-more-btn
        span 더보기
        i.fa-solid.fa-angle-down
    else
      include partials/empty
  section
    h1 🪲 많이 본 풍월량 영상
    ul.popular
      each mostViewedVideo, index in mostViewedVideos
        +popular(mostViewedVideo.video, mostViewedVideo.isLiked, index)
  section
    h1 📌 추천 풍레이리스트
    if recommendPlaylists.length > 0
      ul.recommend
        each playlist in recommendPlaylists
          +recommend(playlist)
    else
      include partials/empty
  section
    h1 🎧 쉬는 시간
    if restTimeVideos.length > 0
      ul.popular
        each restTimeVideo, index in restTimeVideos
          +popular(restTimeVideo.video, restTimeVideo.isLiked, index)
    else
      include partials/empty