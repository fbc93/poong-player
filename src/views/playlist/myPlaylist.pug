extends ../base

block content
  .pageTitle=pageTitle
  ul.my-play-lists
    li.add-playlist
      a(href="/playlist/create")
        .thumbnail-wrap
          i.fa-solid.fa-plus
        .title 새 플레이리스트 추가
    each playlist in playlists
      li.playlist(data-id=playlist._id)
        .thumbnail-wrap 
          .overlay 
            i.fa-solid.fa-ellipsis-vertical.menu
          if playlist.videos.length > 0
            i.fa-solid.fa-play.playlist-play-btn
          .thumbnail 
            each video, index in playlist.videos 
              if index <= 3
                .thumb(style=`background-image: url(${video.thumbUrl})`)
        a(href=`/playlist/${playlist._id}`).title=playlist.name
        .info-wrap 
          .count #{playlist.videos.length}개 영상