extends ../base
include ../mixins/selectAvatar

block content
  .pageTitle=pageTitle
  div.errorMsg=errorMsg
  form.edit-form(method="POST")
    .input-item
      label(for="username") 유저네임
      input(name="username" id="username" type="text" value=loggedInUser.username minLength=1 maxLength=6 placeholder="유저네임(1자 ~ 최대 6자)을 입력해주세요." required)
    .label 프로필 선택
    .select-avatar
      each imageName in ["image1", "image2", "image3"]
        +selectAvatar(imageName, pageTitle)
    input.submit(type="submit", value="유저네임/프로필 변경")

  form.edit-form(method="POST" action="/user/change-pw")
    .input-item
      label(for="password") 기존 비밀번호
      input(name="password" id="password" type="password" minLength=4 placeholder="기존 비밀번호를 입력하세요")
    .input-item
      label(for="password_new") 새로운 비밀번호
      input(name="password_new" id="password_new" type="password" minLength=4 placeholder="새로운 비밀번호를 입력하세요. (최소 4자)")
    input.submit(type="submit", value="비밀번호 변경")